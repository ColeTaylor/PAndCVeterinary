@model Appointment
@{
    ViewData["Title"] = "Delete";
}

<form method ="post" asp-action="DeletePost">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Appointment</h2>
            <hr/>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group row col-8">
                    <label asp-for="FirstName" class="form-label mt-4">First Name</label>
                    <input asp-for="FirstName" type="text" class="form-control" name="FirstName" id="FirstName" placeholder="First Name">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
                <div class="col-md-4">
                <div class="form-group row col-8">
                    <label asp-for="LastName" class="form-label mt-4">Last Name</label>
                    <input asp-for="LastName" type="text" class="form-control" name="LastName" id="LastName" placeholder="Last Name">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <div class="form-group row col-11">
                    <label asp-for="EmailAddress" class="form-label mt-4">Email Address</label>
                    <input asp-for="EmailAddress" type="email" class="form-control" name="EmailAddress" id="EmailAddress" placeholder="Email">
                </div>
            </div>
            <div class="form-group col-md-4">
                 <div class="form-group row col-11">
                    <label asp-for="PhoneNumber" class="form-label mt-4">Phone Number</label>
                    <input asp-for="PhoneNumber" type="tel" class="form-control" id="phone" name="PhoneNumber" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="555-555-5555">
                </div>
            </div>
        </div>
        <div class="form-group row col-4">
            <label asp-for="AppointmentTime" class="form-label mt-4">Appointment (date and time):</label>
            <input asp-for="AppointmentTime" class="form-control" type="datetime-local" id="AppointmentTime" name="AppointmentTime">
            <span asp-validation-for="AppointmentTime" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group row col-8">
                    <label asp-for="Reason" class="form-label mt-4" >Reason For Visit</label>
                    <input asp-for="Reason" class="form-control" type="text" name="Reason" placeholder="Reason" id="Reason">
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group row col-8">
                    <label asp-for="PetName" class="form-label mt-4" >Pet's Name</label>
                    <input asp-for="PetName" class="form-control" type="text" name="PetName" placeholder="Pet's Name" id="PetName">
                </div>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="form-group col-md-2">
                <button type="submit" class="btn btn-outline-danger">
                    Delete
                </button>
            </div>
            <div class="form-group col-md-2">
                <a  class = "btn btn-outline-secondary" asp-controller="Appointment" asp-action="Index">Cancel</a>
            </div>
        </div>
    </div>
</form>

